{
	"name": "renpyWarp",
	"displayName": "Ren'Py Warp to Line",
	"description": "warp to current line in ren'py",
	"version": "0.0.10",
	"publisher": "PaisleySoftworks",
	"icon": "icon.jpeg",
	"engines": {
		"vscode": "^1.87.0"
	},
	"keywords": [
		"renpy"
	],
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/furudean/vscode-renpy-warp.git"
	},
	"preview": true,
	"activationEvents": [
		"onLanguage:renpy"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "renpyWarp.warp",
				"title": "Warp to current line",
				"category": "Renpy",
				"icon": "$(play)"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "renpyWarp.warp",
					"when": "editorLangId == renpy"
				}
			],
			"editor/title/run": [
				{
					"command": "renpyWarp.warp",
					"group": "navigation",
					"when": "editorLangId == renpy"
				}
			]
		},
		"keybindings": [
			{
				"command": "renpyWarp.warp",
				"key": "ctrl+k shift+e",
				"mac": "cmd+k shift+e",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"title": "TypeScript",
			"properties": {
				"renpyWarp.sdkPath": {
					"type": "string",
					"default": "~/renpy",
					"description": "Path to the Ren'Py SDK"
				}
			}
		}
	},
	"extensionDependencies": [
		"LuqueDaniel.languague-renpy"
	],
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@types/vscode": "^1.87.0",
		"@vscode/test-cli": "^0.0.6",
		"@vscode/test-electron": "^2.3.9",
		"eslint": "^8.56.0",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"puka": "^1.0.1",
		"untildify": "^4.0.0",
		"upath": "^2.0.1"
	}
}
